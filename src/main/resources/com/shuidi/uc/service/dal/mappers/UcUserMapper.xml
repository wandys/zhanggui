<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.shuidi.uc.service.dal.mappers.UcUserMapper">

    <sql id="selectParam">
        id,
        name,
        phone,
        status,
        password,
        reg_time,
        create_time,
        update_time,
        last_login_time
    </sql>

    <select id="getUserById" resultType="com.shuidi.uc.service.dal.entity.UcUser">
            SELECT
            <include refid="selectParam"></include>
            FROM   uc_user
            WHERE   id = #{id}
    </select>

    <select id="findUcUsers" parameterType="com.shuidi.uc.service.dal.entity.UcUser" resultType="java.util.List">
        SELECT
        <include refid="selectParam"></include>
        FROM   uc_user
        <where>
            <if test="id!=null">
                AND id = #{id}
            </if>
            <if test="name!=null">
                AND name = #{name}
            </if>
            <if test="phone!=null">
                AND phone = #{phone}
            </if>
            <if test="status!=null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <insert id="saveUcUser" keyProperty="id" parameterType="com.shuidi.uc.service.dal.entity.UcUser">
        INNER INTO
        uc_user(
        id,
        name,
        phone,
        status,
        password,
        reg_time,
        create_time,
        update_time,
        last_login_time
        )
        VALUE (
        #{id},
        #{name},
        #{phone},
        #{status},
        #{password},
        #{regTime},
        #{createTime},
        #{updateTime},
        #{lastLoginTime}
        )
    </insert>
    <update id="updateUcUser" parameterType="com.shuidi.uc.service.dal.entity.UcUser">
        UPDATE
          uc_user
        <set>
            <if test="name!=null">
                name = #{name}
            </if>
            <if test="phone!=null">
                phone = #{phone}
            </if>
            <if test="pasword!=null">
                pasword = #{pasword}
            </if>
            <if test="status!=null">
                status = #{status}
            </if>
            <if test="updateTime!=null">
                update_time= #{updateTime}
            </if>
            <if test="lastLoginTime!=null">
                last_login_time= #{lastLoginTime}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>