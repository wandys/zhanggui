<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.shuidi.zhanggui.service.dal.mappers.AttributeOptionMapper">
    <resultMap id="result" type="com.shuidi.zhanggui.service.dal.entity.AttributeOption">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="option" property="option"/>
        <result column="attribute_id" property="attributeId"/>
    </resultMap>
    <sql id="selectParam">
        id,
        name,
        attribute_id,
        option
    </sql>

    <select id="getById" resultType="com.shuidi.zhanggui.service.dal.entity.AttributeOption">
        SELECT
          <include refid="selectParam"></include>
        FROM
            attribute_option
        WHERE
          id = #{id}
    </select>
    <select id="findList" parameterType="java.util.Map" resultMap="result">
        SELECT
          <include refid="selectParam"></include>
        FROM
          attribute_option
        <where>
            <if test="id!=null">
                AND id = #{id}
            </if>
            <if test="name!=null">
                AND name LIKE concat('%',#{name},'%')
            </if>
            <if test="option !=null">
                AND option = #{option}
            </if>
            <if test="attribute_id !=null">
                AND attribute_id = #{attributeId}
            </if>
        </where>

    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.shuidi.zhanggui.service.dal.entity.AttributeOption">
        INSERT INTO
            attribute_option(
              name,
              attribute_id,
              option
              )
        VALUES (
          #{name},
          #{attributeId},
          #{option}
        );
    </insert>
    <update id="update" parameterType="com.shuidi.zhanggui.service.dal.entity.AttributeOption">
        UPDATE
          attribute_option
        SET
          name = #{name},
          attribute_id = #{attributeId},
          option=#{option}
        WHERE
          id = #{id}
    </update>
</mapper>